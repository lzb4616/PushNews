<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/send_news_Rlayout"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/titlebar" >

        <ImageButton
            android:id="@+id/send_news_ibt_back"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:layout_marginLeft="4dip"
            android:background="@drawable/btn_common_selector" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:background="@drawable/btn_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="发送紧急新闻"
            android:textColor="@color/white"
            android:textSize="20sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/send_news_Rlayout2"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <TextView
            android:id="@+id/send_news_tx"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="标题:"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/send_news_title"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@id/send_news_tx"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:background="@drawable/shape"
            android:gravity="top"
            android:padding="8dp"
            android:singleLine="false"
            android:text="标题"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/send_news_kw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/send_news_title"
            android:padding="8dp"
            android:text="关键字:"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/send_news_keyword"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@id/send_news_kw"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:background="@drawable/shape"
            android:gravity="top"
            android:padding="8dp"
            android:singleLine="false"
            android:text="关键字"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/send_news_tx1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/send_news_keyword"
            android:padding="8dp"
            android:text="内容:"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/send_news_content"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@id/send_news_tx1"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:background="@drawable/shape"
            android:gravity="top"
            android:padding="8dp"
            android:singleLine="false"
            android:text="明天台风"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/send_news_type"
            android:layout_width="wrap_content"
            android:layout_height="40dip"
            android:layout_below="@id/send_news_content"
            android:padding="8dp"
            android:text="新闻类型:"
            android:textSize="18sp" />

        <Spinner
            android:id="@+id/news_type2"
            android:layout_width="110dp"
            android:layout_height="40dp"
            android:layout_below="@id/send_news_content"
            android:layout_toRightOf="@id/send_news_type"
            android:singleLine="true"
            android:textColor="@color/black" />

        <Spinner
            android:id="@+id/news_type3"
            android:layout_width="110dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_below="@id/send_news_content"
            android:singleLine="true"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/send_news_degree"
            android:layout_width="wrap_content"
            android:layout_height="40dip"
            android:layout_below="@id/send_news_type"
            android:padding="8dp"
            android:text="紧急程度:"
            android:textSize="18sp" />

        <Spinner
            android:id="@+id/news_degree"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_below="@id/send_news_type"
            android:layout_toRightOf="@id/send_news_degree"
            android:singleLine="true"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/send_news_bt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/send_news_degree"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:background="@drawable/btn_common_selector"
            android:text="发  送"
            android:textColor="@color/white"
            android:textSize="20sp" />
    </RelativeLayout>

</LinearLayout>